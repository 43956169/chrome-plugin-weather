{
    "manifest_version": 2,
    "version": "1.0",
    "name": "weather",
    "description": "a chrome extension for local weather",
    "icons": {
         "128": "imgs/icon-128.png",
         "16": "imgs/icon-16.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "imgs/icon-19.png",
            "38": "imgs/icon-38.png"
        },
        "default_title": "weather",
        "default_popup": "popup.html"
    },
    "permissions":[
    	"http://*/*",
    	"https://*/*"
    ]
}
